{
  "name": "cli-workspace-root",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-CLI monorepo workspace optimized for AI-driven solution engineering",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/**'",
    "build:apps": "turbo run build --filter='./apps/**'",
    "dev:alpha": "pnpm --filter cli-alpha run dev",
    "dev:beta": "pnpm --filter cli-beta run dev",
    "dev:gamma": "pnpm --filter cli-gamma run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run e2e",
    "test:coverage": "turbo run test -- --coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "perf": "turbo run perf",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "generate:cli": "pnpm --filter generators run generate:cli",
    "generate:package": "pnpm --filter generators run generate:package",
    "install-completions": "bash scripts/install-completions.sh",
    "inventory:generate": "node scripts/generate-inventory.js",
    "inventory:validate": "node scripts/validate-inventory.js",
    "inventory:update-docs": "node scripts/update-architecture-docs.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "cosmiconfig": "^9.0.0",
    "cspell": "^8.16.1",
    "debug": "^4.3.7",
    "eslint": "^9.16.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "inquirer": "^12.2.0",
    "jscpd": "^4.0.5",
    "lint-staged": "^15.2.11",
    "listr2": "^8.2.5",
    "ls-lint": "^2.3.0-beta.2",
    "madge": "^8.0.0",
    "ora": "^8.1.1",
    "pino": "^9.5.0",
    "plop": "^4.0.1",
    "prettier": "^3.4.2",
    "secretlint": "^8.3.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "zod": "^3.23.8"
  },
  "keywords": [
    "cli",
    "monorepo",
    "oclif",
    "typescript",
    "pnpm",
    "turborepo"
  ],
  "author": "",
  "license": "MIT"
}
