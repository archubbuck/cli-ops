{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "build/**", ".next/**", "!.next/cache/**"],
      "outputMode": "new-only"
    },
    "test": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["coverage/**"],
      "outputMode": "new-only"
    },
    "e2e": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["test-results/**"],
      "outputMode": "new-only"
    },
    "lint": {
      "cache": true,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": []
    },
    "format": {
      "cache": true,
      "outputs": []
    },
    "format:check": {
      "cache": true,
      "outputs": []
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "perf": {
      "cache": false,
      "outputs": ["perf-results/**"]
    },
    "inventory": {
      "dependsOn": ["build"],
      "outputs": ["inventory/**", "docs/CLI-INVENTORY.md"],
      "cache": true
    },
    "inventory:validate": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": []
    }
  }
}
